#
# 30ipsec
#
# 
{
    use esmith::NetworksDB;
    my $ndb = esmith::NetworksDB->open_ro();
    my @reds = $ndb->get_by_role('red');

    if (scalar(@reds) > 0) {
        foreach (@reds) {
            $OUT .= sprintf("ivpn %12s:0.0.0.0/0\n", $_->key);
        }
    } else {
        my $greenRecord = $ndb->green();
        $OUT .= sprintf("ivpn %12s:0.0.0.0/0", $greenRecord->key);
    }
}
